<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="genericCategory">
        <item name="layout_constraintDimensionRatio">32:16</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="rightCategory" parent="genericCategory" >
        <item name="layout_constraintStart_toStartOf">@+id/leftVerticalGuideLine</item>
        <item name="layout_constraintEnd_toStartOf">@+id/rightVerticalGuideLine</item>
    </style>


    <style name="leftCategory" parent="genericCategory" >
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toStartOf">@+id/leftVerticalGuideLine</item>
    </style>


    <style name="mainInstructions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="songNameInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">5dp</item>
    </style>
    <style name="songOthersInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="genericGLStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="horizontalGLStyle" parent="genericGLStyle">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="verticalGLStyle" parent="genericGLStyle">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="musicPlayerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="musicPlayerButtonStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">24sp</item>
    </style>
</resources>
